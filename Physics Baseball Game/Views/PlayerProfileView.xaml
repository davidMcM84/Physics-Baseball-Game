<UserControl x:Class="Physics_Baseball_Game.Views.PlayerProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             MinWidth="800" MinHeight="520"
             Background="#0D1B2A">
    <UserControl.Resources>
        <Style TargetType="TextBlock" x:Key="LabelStyle">
            <Setter Property="Foreground" Value="#EEE" />
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,8,0,2"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Padding" Value="6,4"/>
        </Style>
        <Style TargetType="ComboBox">
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="Padding" Value="4,3"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="14,8"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        <LinearGradientBrush x:Key="PanelBrush" StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#1B263B" Offset="0"/>
            <GradientStop Color="#415A77" Offset="1"/>
        </LinearGradientBrush>
        <SolidColorBrush x:Key="CardBorder" Color="#335A708C"/>
    </UserControl.Resources>

    <Border Padding="24" Background="{StaticResource PanelBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Player Profile"
                       FontSize="32"
                       FontWeight="Bold"
                       Foreground="White"
                       Margin="0,0,0,18"/>

            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="40"/> <!-- spacer -->
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Identity / Role -->
                <StackPanel Grid.Column="0">
                    <TextBlock Text="Identity" FontSize="18" FontWeight="Bold" Foreground="#FFFFFF" Margin="0,0,0,10"/>
                    <TextBlock Text="First Name" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Text="Last Name" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Text="Age" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Text="Position" Style="{StaticResource LabelStyle}"/>
                    <ComboBox ItemsSource="{Binding Positions}"
                              SelectedItem="{Binding Position, Mode=TwoWay}"/>

                    <TextBlock Text="Role" Style="{StaticResource LabelStyle}"/>
                    <ComboBox ItemsSource="{Binding Roles}"
                              SelectedItem="{Binding Role, Mode=TwoWay}"/>

                    <TextBlock Text="Batting Hand" Style="{StaticResource LabelStyle}"/>
                    <ComboBox ItemsSource="{Binding BatHands}"
                              SelectedItem="{Binding BattingHand, Mode=TwoWay}"/>

                    <TextBlock Text="Throwing Hand" Style="{StaticResource LabelStyle}"/>
                    <ComboBox ItemsSource="{Binding ThrowHands}"
                              SelectedItem="{Binding ThrowingHand, Mode=TwoWay}"/>
                </StackPanel>

                <!-- Physical Attributes -->
                <StackPanel Grid.Column="2">
                    <TextBlock Text="Physical Attributes" FontSize="18" FontWeight="Bold" Foreground="#FFFFFF" Margin="0,0,0,10"/>

                    <TextBlock Text="Height (in)" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding HeightInInches, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Text="Weight (lbs)" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding WeightInPounds, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Text="Sprint Speed" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding SprintSpeed, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Text="Acceleration" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding Acceleration, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Text="Bat Speed" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding BatSpeed, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Text="Arm Strength" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding ArmStrength, UpdateSourceTrigger=PropertyChanged}"/>

                    <TextBlock Text="Reaction Time (s)" Style="{StaticResource LabelStyle}"/>
                    <TextBox Text="{Binding ReactionTime, UpdateSourceTrigger=PropertyChanged}"/>
                </StackPanel>
            </Grid>

            <!-- Actions -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0">
                <Button Content="Save" Command="{Binding SaveCommand}" />
                <Button Content="Cancel" Command="{Binding CancelCommand}" Margin="0,0,0,0"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>