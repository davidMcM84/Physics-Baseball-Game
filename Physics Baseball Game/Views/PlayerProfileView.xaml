<UserControl x:Class="Physics_Baseball_Game.Views.PlayerProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:Physics_Baseball_Game.Converters"
             mc:Ignorable="d"
             Background="#0D1B2A"
             MinWidth="880" MinHeight="520">
    <UserControl.Resources>
        <conv:ScaleConverter x:Key="ScaleConverter"/>
        <Color x:Key="TrackColor">#22384F</Color>
        <Color x:Key="TrackBorderColor">#2F4F6A</Color>
        <SolidColorBrush x:Key="TrackBorderBrush" Color="{StaticResource TrackBorderColor}"/>
        <Color x:Key="BarGradientTop">#3FA6FF</Color>
        <Color x:Key="BarGradientBottom">#1F6CBF</Color>
        <SolidColorBrush x:Key="CardBg" Color="#142231"/>
        <SolidColorBrush x:Key="AccentBrush" Color="#3FA6FF"/>

        <!-- TITLE -->
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0 0 0 12"/>
        </Style>

        <!-- Field label (inline) -->
        <Style x:Key="FieldLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#AFC4D5"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0 0 0 2"/>
        </Style>

        <!-- TextBox compact -->
        <Style x:Key="CompactTextBox" TargetType="TextBox">
            <Setter Property="Padding" Value="6 3"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#1E2F42"/>
            <Setter Property="BorderBrush" Value="#31516E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Margin" Value="0 0 12 10"/>
            <Setter Property="MinWidth" Value="110"/>
        </Style>

        <!-- ComboBox compact -->
        <Style x:Key="CompactComboBox" TargetType="ComboBox">
            <Setter Property="Padding" Value="4 2"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Background" Value="#1E2F42"/>
            <Setter Property="BorderBrush" Value="#31516E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="Margin" Value="0 0 12 10"/>
            <Setter Property="MinWidth" Value="130"/>
        </Style>

        <!-- ProgressBar styling -->
        <Style x:Key="RatingProgressBar" TargetType="ProgressBar">
            <Setter Property="Height" Value="18"/>
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="{StaticResource BarGradientTop}" Offset="0"/>
                        <GradientStop Color="{StaticResource BarGradientBottom}" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="Background">
                <Setter.Value>
                    <SolidColorBrush Color="{StaticResource TrackColor}"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border CornerRadius="4"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{StaticResource TrackBorderBrush}"
                                BorderThickness="1"
                                SnapsToDevicePixels="True">
                            <Grid x:Name="PART_Track" ClipToBounds="True">
                                <Border x:Name="PART_Indicator"
                                        Background="{TemplateBinding Foreground}"
                                        HorizontalAlignment="Left"
                                        CornerRadius="4"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsIndeterminate" Value="True">
                                <Setter TargetName="PART_Indicator" Property="Width" Value="50"/>
                            </Trigger>
                            <Trigger Property="Orientation" Value="Vertical">
                                <Setter TargetName="PART_Indicator" Property="HorizontalAlignment" Value="Stretch"/>
                                <Setter TargetName="PART_Indicator" Property="VerticalAlignment" Value="Bottom"/>
                                <Setter TargetName="PART_Indicator" Property="Height" Value="0"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Rating row layout -->
        <Style x:Key="RatingRowGrid" TargetType="Grid">
            <Setter Property="Margin" Value="0 0 0 12"/>
        </Style>

        <Style x:Key="PrimaryButton" TargetType="Button">
            <Setter Property="Padding" Value="16 8"/>
            <Setter Property="Margin" Value="0 0 10 0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2E577A"/>
            <Setter Property="BorderBrush" Value="#3F6E98"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="SecondaryButton" TargetType="Button" BasedOn="{StaticResource PrimaryButton}">
            <Setter Property="Background" Value="#1E374C"/>
            <Setter Property="BorderBrush" Value="#335068"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- HEADER -->
        <Border Background="#162637" Padding="18 14" Margin="16 16 16 10" CornerRadius="6">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left" VerticalAlignment="Center">
                    <TextBlock Text="{Binding FirstName}" Foreground="White" FontSize="26" FontWeight="Bold" Margin="0 0 8 0"/>
                    <TextBlock Text="{Binding LastName}" Foreground="#6FC3FF" FontSize="26" FontWeight="Bold"/>
                    <TextBlock Text="  |  " Foreground="#3C5A72" FontSize="20" Margin="6 3 6 0"/>
                    <TextBlock Text="{Binding Position}" Foreground="#E0EAF2" FontSize="18" VerticalAlignment="Center"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <TextBlock Text="Age:" Foreground="#7FA2BA" Margin="0 0 4 0" VerticalAlignment="Center"/>
                    <TextBox Text="{Binding Age, UpdateSourceTrigger=PropertyChanged}" Width="40"
                             Style="{StaticResource CompactTextBox}" Margin="0" HorizontalContentAlignment="Center"/>
                    <TextBlock Text="{Binding Role}" Foreground="#FFFFFF" Margin="14 0 0 0" VerticalAlignment="Center" FontWeight="SemiBold"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- CONTENT -->
        <ScrollViewer Grid.Row="1" Margin="12 0 12 8" VerticalScrollBarVisibility="Auto">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="320"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT: Editable identity / hands / size -->
                <Border Grid.Column="0" Background="{StaticResource CardBg}" Padding="14" CornerRadius="6" BorderBrush="#22394F" BorderThickness="1">
                    <StackPanel>
                        <TextBlock Text="Identity" Style="{StaticResource SectionHeader}" Margin="0 0 0 6"/>
                        <TextBlock Text="First Name" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding FirstName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource CompactTextBox}" Width="250"/>
                        <TextBlock Text="Last Name" Style="{StaticResource FieldLabel}"/>
                        <TextBox Text="{Binding LastName, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource CompactTextBox}" Width="250"/>

                        <TextBlock Text="Position" Style="{StaticResource FieldLabel}"/>
                        <ComboBox ItemsSource="{Binding Positions}"
                                  SelectedItem="{Binding Position, Mode=TwoWay}"
                                  Style="{StaticResource CompactComboBox}" Width="250"/>

                        <TextBlock Text="Role" Style="{StaticResource FieldLabel}"/>
                        <ComboBox ItemsSource="{Binding Roles}"
                                  SelectedItem="{Binding Role, Mode=TwoWay}"
                                  Style="{StaticResource CompactComboBox}" Width="250"/>

                        <StackPanel Orientation="Horizontal">
                            <StackPanel Width="120">
                                <TextBlock Text="Batting" Style="{StaticResource FieldLabel}"/>
                                <ComboBox ItemsSource="{Binding BatHands}"
                                          SelectedItem="{Binding BattingHand, Mode=TwoWay}"
                                          Style="{StaticResource CompactComboBox}" Width="120"/>
                            </StackPanel>
                            <StackPanel Width="120">
                                <TextBlock Text="Throwing" Style="{StaticResource FieldLabel}"/>
                                <ComboBox ItemsSource="{Binding ThrowHands}"
                                          SelectedItem="{Binding ThrowingHand, Mode=TwoWay}"
                                          Style="{StaticResource CompactComboBox}" Width="120"/>
                            </StackPanel>
                        </StackPanel>

                        <TextBlock Text="Physical Dimensions" Style="{StaticResource SectionHeader}" Margin="0 10 0 6"/>
                        <StackPanel Orientation="Horizontal">
                            <StackPanel Width="120">
                                <TextBlock Text="Height (in)" Style="{StaticResource FieldLabel}"/>
                                <TextBox Text="{Binding HeightInInches, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource CompactTextBox}" Width="110"/>
                            </StackPanel>
                            <StackPanel Width="120">
                                <TextBlock Text="Weight (lbs)" Style="{StaticResource FieldLabel}"/>
                                <TextBox Text="{Binding WeightInPounds, UpdateSourceTrigger=PropertyChanged}" Style="{StaticResource CompactTextBox}" Width="110"/>
                            </StackPanel>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- RIGHT: Ratings style bars -->
                <StackPanel Grid.Column="2">
                    <Border Background="{StaticResource CardBg}" Padding="16" CornerRadius="6"
                            BorderBrush="#22394F" BorderThickness="1" Margin="0 0 0 14">
                        <StackPanel>
                            <TextBlock Text="Athletic Profile" Style="{StaticResource SectionHeader}"/>

                            <!-- Sprint Speed -->
                            <Grid Style="{StaticResource RatingRowGrid}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="52"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Sprint Speed" Foreground="#D7E7F2" VerticalAlignment="Center"/>
                                <ProgressBar Grid.Column="1"
                                             Style="{StaticResource RatingProgressBar}"
                                             Minimum="0" Maximum="100"
                                             Value="{Binding SprintSpeed, Converter={StaticResource ScaleConverter}, ConverterParameter=0|40}"/>
                                <TextBlock Grid.Column="2" Text="{Binding SprintSpeed, StringFormat={}{0:0.0}}"
                                           Foreground="#8FB9D6" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>

                            <!-- Acceleration -->
                            <Grid Style="{StaticResource RatingRowGrid}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="52"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Acceleration" Foreground="#D7E7F2" VerticalAlignment="Center"/>
                                <ProgressBar Grid.Column="1"
                                             Style="{StaticResource RatingProgressBar}"
                                             Minimum="0" Maximum="100"
                                             Value="{Binding Acceleration, Converter={StaticResource ScaleConverter}, ConverterParameter=0|10}"/>
                                <TextBlock Grid.Column="2" Text="{Binding Acceleration, StringFormat={}{0:0.0}}"
                                           Foreground="#8FB9D6" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>

                            <!-- Reaction Time (lower is better -> invert) -->
                            <Grid Style="{StaticResource RatingRowGrid}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="52"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Reaction Time" Foreground="#D7E7F2" VerticalAlignment="Center"/>
                                <ProgressBar Grid.Column="1"
                                             Style="{StaticResource RatingProgressBar}"
                                             Minimum="0" Maximum="100"
                                             Value="{Binding ReactionTime, Converter={StaticResource ScaleConverter}, ConverterParameter=0.08|0.35|invert}"/>
                                <TextBlock Grid.Column="2" Text="{Binding ReactionTime, StringFormat={}{0:0.00}}"
                                           Foreground="#8FB9D6" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <Border Background="{StaticResource CardBg}" Padding="16" CornerRadius="6"
                            BorderBrush="#22394F" BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Skill Metrics" Style="{StaticResource SectionHeader}"/>

                            <!-- Bat Speed -->
                            <Grid Style="{StaticResource RatingRowGrid}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="52"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Bat Speed" Foreground="#D7E7F2" VerticalAlignment="Center"/>
                                <ProgressBar Grid.Column="1"
                                             Style="{StaticResource RatingProgressBar}"
                                             Minimum="0" Maximum="100"
                                             Value="{Binding BatSpeed, Converter={StaticResource ScaleConverter}, ConverterParameter=0|120}"/>
                                <TextBlock Grid.Column="2" Text="{Binding BatSpeed, StringFormat={}{0:0.0}}"
                                           Foreground="#8FB9D6" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>

                            <!-- Arm Strength -->
                            <Grid Style="{StaticResource RatingRowGrid}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="140"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="52"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Arm Strength" Foreground="#D7E7F2" VerticalAlignment="Center"/>
                                <ProgressBar Grid.Column="1"
                                             Style="{StaticResource RatingProgressBar}"
                                             Minimum="0" Maximum="100"
                                             Value="{Binding ArmStrength, Converter={StaticResource ScaleConverter}, ConverterParameter=0|110}"/>
                                <TextBlock Grid.Column="2" Text="{Binding ArmStrength, StringFormat={}{0:0.0}}"
                                           Foreground="#8FB9D6" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Grid>
        </ScrollViewer>

        <!-- ACTION BAR -->
        <DockPanel Grid.Row="2" Margin="16 8 16 16" LastChildFill="False">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Save" Command="{Binding SaveCommand}" Style="{StaticResource PrimaryButton}"/>
                <Button Content="Cancel" Command="{Binding CancelCommand}" Style="{StaticResource SecondaryButton}"/>
            </StackPanel>
        </DockPanel>
    </Grid>
</UserControl>